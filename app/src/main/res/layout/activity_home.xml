<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.pages.home.HomeActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHomeTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHomeBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHomeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHomeRigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHomeCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHomeH25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHomeH50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHomeH75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHomeH25"
        app:layout_constraintEnd_toStartOf="@+id/guidelineHomeRigh"
        app:layout_constraintStart_toStartOf="@+id/guidelineHomeLeft"
        app:layout_constraintTop_toTopOf="@id/guidelineHomeTop">


        <TextView
            android:id="@+id/textViewWelcomeUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bem Vindo Rodrigo Nairnei"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/guidelineHomeRigh"
            app:layout_constraintStart_toStartOf="@+id/guidelineHomeLeft"
            app:layout_constraintTop_toTopOf="@+id/guidelineHomeTop" />

        <TextView
            android:id="@+id/textViewCurrentCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Seu saldo em carteira é R$ XX.XX"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Para negociar, selecione a carteira de interesse abaixo"
            android:textColor="@color/black" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOlinda"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHomeH50"
        app:layout_constraintEnd_toStartOf="@+id/guidelineHomeCenter"
        app:layout_constraintStart_toStartOf="@+id/guidelineHomeLeft"
        app:layout_constraintTop_toTopOf="@+id/guidelineHomeH25">

        <TextView
            android:id="@+id/textViewMercadoBitcoinValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="BTC 0"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMercadoBitcoin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHomeH50"
        app:layout_constraintEnd_toStartOf="@+id/guidelineHomeRigh"
        app:layout_constraintStart_toStartOf="@+id/guidelineHomeCenter"
        app:layout_constraintTop_toTopOf="@+id/guidelineHomeH25">

        <TextView
            android:id="@+id/textViewOlindaValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="B$ 0"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOurWallet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHomeH75"
        app:layout_constraintEnd_toStartOf="@+id/guidelineHomeRigh"
        app:layout_constraintStart_toStartOf="@+id/guidelineHomeLeft"
        app:layout_constraintTop_toTopOf="@+id/guidelineHomeH50">

        <TextView
            android:id="@+id/textViewRealValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="R$ 100.000,00"
            android:textColor="@color/black" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/buttonReport"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Relatorio de transações"
        app:layout_constraintBottom_toTopOf="@+id/buttonUpdateQuotation"
        app:layout_constraintEnd_toStartOf="@+id/guidelineHomeRigh"
        app:layout_constraintStart_toStartOf="@+id/guidelineHomeLeft"
        app:layout_constraintTop_toTopOf="@+id/guidelineHomeH75" />

    <Button
        android:id="@+id/buttonUpdateQuotation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Atualizar cotação"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHomeBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineHomeRigh"
        app:layout_constraintStart_toStartOf="@+id/guidelineHomeCenter" />


    <TextView
        android:id="@+id/textViewLastUpdate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Ultima cotação atualizada as 00:00"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHomeBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineHomeCenter"
        app:layout_constraintStart_toStartOf="@+id/guidelineHomeLeft"
        app:layout_constraintTop_toTopOf="@+id/buttonUpdateQuotation" />


</androidx.constraintlayout.widget.ConstraintLayout>
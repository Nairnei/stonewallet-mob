<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.nairnei.stonewallet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StoneWallet">
        <activity
            android:name=".inflate_report"
            android:exported="true" />
        <activity
            android:name=".view.pages.ReportActivity"
            android:exported="true" />
        <activity
            android:name=".view.pages.NegotiateActivity"
            android:exported="true" />
        <activity
            android:name=".view.dialogs.ChoiceDialog"
            android:exported="true" />
        <activity
            android:name=".view.pages.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.pages.HomeActivity"
            android:exported="true" />
    </application>

</manifest>